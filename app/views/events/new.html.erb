<%= render :partial => "shared/nav_bar"%>
<div id="central_container">


	<div id="left_column">
	<%= render :partial => "shared/left_column"%>
	</div>
	<div id="right_column">

	<%= render :partial => "shared/contact_header"%>
<div id="new_event">

<%=form_for (@event), :html  => {:multipart  => true }, :remote => true do |f| %>
<%=render "shared/error_messages", :object  => f.object%>
<div class="field">	
	<%=f.label :name %>
	<%=f.text_field :name, :placeholder => "Name"%>
</div>
<div class="field">
	<%=f.label :details %>
	<%=f.text_field :details, :placeholder => "Describe the event"%>
</div>
<div class="field">
	<%=f.label :address %>
	<%= f.text_field :address %>
</div>
<div class="field">
	<%=f.label :date %>
	<%= f.datetime_select :date %>
</div>
<div class="field">
	<%=f.label :Pending? %>
	<%= f.check_box :pending, {} %>

</div>
<div class="field">
	<%=f.label :password %>
	<%= f.password_field :password %>
</div>

<div class="actions">
	<%=f.submit "New event!" %>
</div>
<%end%>


</div>
<%= render :partial  => "shared/text_message_instructions" %> 
	
	
